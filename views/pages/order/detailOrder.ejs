<% layout('../layout') -%>
<% if(!locals.authenticated) { %>
<% include ../../partials/head.ejs %>
<% } %>
<% if(locals.authenticated && !locals.isadmin) { %>
<% include ../../partials/headConnect.ejs %>
<% } %>
<% if (locals.authenticated && locals.isadmin) { %>
<% include ../../partials/headAdmin.ejs %>
<% } %>

<div class="ckeckout">
    <div class="container">
        <div class="ckeck-top heading">
            <h2>Commande</h2>
        </div>
        <div class="container">
            <table id="cart" class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:22%" class="text-center">Prix</th>
                </tr>
                </thead>
                <tbody>
                <%locals.order.forEach( function (productorder) { %>
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="<%= productorder.imagealbum %>" alt="..." class="img-responsive"/></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin"><a href="/album/detail/<%= productorder.idalbum%>"><%= productorder.nomalbum%></a></h4>

                            </div>
                        </div>
                    </td>

                    <td data-th="Subtotal" class="text-center"><%= productorder.prixalbum%> €</td>
                </tr>
                </tbody>
                <%})%>
                <tfoot>
                <tr>

                    <td class="hidden-xs col-lg-offset-6"><strong>Total : <%= locals.price%> €</strong></td>

                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


