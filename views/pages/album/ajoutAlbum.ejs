<% layout('../layout') %>
<% if(!locals.authenticated) {%>
<% include ../../partials/head.ejs %>
<%};%>

<% if (locals.authenticated) {%>
<% include ../../partials/headConnect%>
<%};%>

<div class="col-lg-offset-2">
<form method="post" action="/album/add">
    <fieldset>
        <legend>
            <h3>Création d'un album</h3>
        </legend>

        <div>
            <label for="nomAlbum_id">Nom :</label>
            <input id="nomAlbum_id" name="nomalbum" type="text" required>
        </div>

        <div>
            <label for="nomArtiste_id">Choisir un artiste</label>
            <input id="nomAlbum_id" name="nomartiste" type="text" required>

        <div>

        <div>
            <label for="prixAlbum_id">Prix :</label>
            <input id="prixAlbum_id" name="prixalbum" type="number" required>
        </div>

        <div>
            <label for="genreAlbum_id">Genre :</label>
            <input id="genreAlbum_id" name="genrealbum" type="text" required>
        </div>
        <div>
            <label for="annee_id">Année :</label>
            <input id="annee_id" name="anneealbum" type="number"  required>
        </div>

        <div>
            <label for="imageAlbum_id">URL image :</label>
            <input id="imageAlbum_id" name="imagealbum"   type="text" required>
        </div>
        <div>
            <label for="descriptionAlbum_id">Description :</label>
            <textarea id="descriptionAlbum_id" name="descriptionalbum"></textarea>
        </div>

        <div class="address submit">
            <input type="submit" value="Envoyer">
        </div>
    </fieldset>
</form>
</div>
